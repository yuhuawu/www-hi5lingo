---
import { useTranslations } from '../i18n/utils';
import type { languages } from '../i18n/ui';

interface Props {
  lang: keyof typeof languages;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<!-- Hero Section -->
<section class="bg-indigo-700 text-white py-20 lg:py-32">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
            {t('hero.title_start')} <span class="text-indigo-200">{t('hero.title_end')}</span>
        </h1>
        <p class="text-xl md:text-2xl mb-10 max-w-2xl mx-auto text-indigo-100">
            {t('hero.subtitle')}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#" class="px-8 py-4 bg-white text-indigo-700 font-bold rounded-full text-lg hover:bg-indigo-50 transition shadow-lg">
                {t('hero.cta_primary')}
            </a>
            <a href="#" class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full text-lg hover:bg-white/10 transition">
                {t('hero.cta_secondary')}
            </a>
        </div>
    </div>
</section>

<!-- Features Grid -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-16 text-slate-900">{t('features.title')}</h2>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100">
                <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4 text-indigo-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold mb-2">{t('features.expert.title')}</h3>
                <p class="text-slate-600">{t('features.expert.desc')}</p>
            </div>
            <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100">
                <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4 text-indigo-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 18.75a6 6 0 006-6v-1.5m-6 7.5a6 6 0 01-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 01-3-3V4.5a3 3 0 116 0v8.25a3 3 0 01-3 3z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold mb-2">{t('features.speaking.title')}</h3>
                <p class="text-slate-600">{t('features.speaking.desc')}</p>
            </div>
            <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100">
                <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4 text-indigo-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold mb-2">{t('features.anywhere.title')}</h3>
                <p class="text-slate-600">{t('features.anywhere.desc')}</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="bg-indigo-50 py-20">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-6">{t('cta.title')}</h2>
        <p class="text-xl text-slate-600 mb-8 max-w-2xl mx-auto">{t('cta.desc')}</p>
        <a href="#" class="inline-block px-8 py-4 bg-indigo-600 text-white font-bold rounded-full text-lg hover:bg-indigo-700 transition shadow-lg shadow-indigo-200">
            {t('cta.button')}
        </a>
    </div>
</section>
